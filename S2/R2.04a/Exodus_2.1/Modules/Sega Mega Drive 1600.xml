	<BusInterface.UnmappedLineState DeviceInstanceName="MD IO" TargetLine="PORT1_D0" Value="1" />
	<BusInterface.UnmappedLineState DeviceInstanceName="MD IO" TargetLine="PORT1_D1" Value="1" />
